<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="8dp"
    android:layout_marginEnd="12dp" android:layout_marginRight="12dp"
    android:background="@color/program_orange">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@null"
        android:layout_gravity="center_vertical"
        android:id="@+id/imgMediaThumbnail" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_holder_media_title"
            android:id="@+id/txtMediaTitle"
            android:textSize="20sp"
            android:textColor="@color/true_white"
            android:textStyle="bold"
            android:gravity="top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_holder_media_length"
            android:textSize="16sp"
            android:textColor="@color/true_white"
            android:id="@+id/txtMediaLength"
            android:layout_gravity="center_vertical" />

    </LinearLayout>




</LinearLayout>